const mongoose = require('mongoose');

const inactivitySchema = new mongoose.Schema({
    userId: {
        type: String,
        required: true,
        unique: true
    },
    userName: {
        type: String,
        required: true
    },
    lastMessageDate: {
        type: Date,
        required: true
    }
});

module.exports = mongoose.model('InactiveUser', inactivitySchema);
