const mongoose = require("mongoose");

const inactivitySchema = new mongoose.Schema({
  userId: {
    type: String,
    required: true
  },
  userName: {
    type: String,
    required: true,
  },
  lastMessageDate: {
    type: Date,
    required: true
  },
  lastVoiceActivity: {
      type: Date, // Add this to track voice activity
      default: null,
    }
});


const inactiveDB = mongoose.model("InactiveUser", inactivitySchema);

module.exports = {
    inactiveDB
};
